{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2019",
    "allowJs": false
  },
  "include": [
    "**/*",
    ".*",
    "package.json",
    "src/language-file-extensions.json"
  ],
  "exclude": [
    "dist",
    "bindings",
    "src/__tests__",
    "vitest.config.ts",
    "typehacks",
    "*.mjs"
  ],
  "references": [{ "path": "../lib/shared" }, { "path": "../vscode" }]
}
